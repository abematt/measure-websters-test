# Backend Development Dockerfile - FastAPI with hot reload
FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    && rm -rf /var/lib/apt/lists/*

# Copy only requirements for better caching
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Install uvicorn with reload support
RUN pip install --no-cache-dir uvicorn[standard]

# The source code will be mounted as a volume
# No need to copy application code

# Expose port
EXPOSE 8001

# Default command (can be overridden in docker-compose)
CMD ["uvicorn", "main_refactored:app", "--host", "0.0.0.0", "--port", "8001", "--reload"]